<!DOCTYPE html>
<html>
  <head>
    <title>WeddingSite</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:300,400,700' rel='stylesheet' type='text/css'>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render :partial => 'layouts/page_layout/layout_header' %>

    <% if signed_in? %>
      <div style="z-index:9999;position:fixed;bottom:10px;left:10px;background:#fff;padding:2rem;color:black;">
        <%= signed_in?.to_s %> - <%= current_user.email %><br>
         <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
      </div>
    <% end %>
    <%= yield %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  </body>
</html>
