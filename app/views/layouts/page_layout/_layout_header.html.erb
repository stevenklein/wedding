<div class="layout-header">
  <div class="container">
    <%= link_to image_tag('logo-new.png', :class => 'logo').html_safe, root_path, :class => 'logo-container', "data-related-section" => "top" %>
    <nav>
      <a href="#" data-related-section="our-story">Our Story</a>
      <a href="#" data-related-section="wedding-party">Wedding Party</a>
      <a href="#" data-related-section="the-big-day">The Big Day</a>
      <a href="#" data-related-section="travel">Travel And Events</a>
      <a href="#" data-related-section="registry">Registry</a>
      <a href="#modal-rsvp" data-toggle="modal" class="button">RSVP</a>
    </nav>
  </div>
</div>

<div class="modal hide fade size-large modal-rsvp" id="modal-rsvp" style="display: none">
  <div class="modal-header">
    <a href="#" data-dismiss="modal" class="close">Ã—</a>
    <h3>RSVP To Our Wedding</h3>
  </div>
  <div class="modal-body">
    <div class="row">
      <div class="control-group span4">
        <label>First Name</label>
        <div class="controls">
          <input type="text" class="full-width">
        </div>
      </div>
      <div class="control-group span4">
        <label>Last Name</label>
        <div class="controls">
          <input type="text" class="full-width">
        </div>
      </div>
      <div class="control-group span4 attending">
        <label>Will You Be Attending?</label>
        <div class="controls">
          <label class="checkbox inline">
            <input type="checkbox"> Yes
          </label>
          <label class="checkbox inline">
            <input type="checkbox"> No
          </label>
        </div>
      </div>
    </div>
    <div class="row" id="new-rsvp-template" style="display:none">
      <div class="control-group span4">
        <label>First Name</label>
        <div class="controls">
          <input type="text" class="full-width">
        </div>
      </div>
      <div class="control-group span4">
        <label>Last Name</label>
        <div class="controls">
          <input type="text" class="full-width">
        </div>
      </div>
      <div class="control-group span4 attending">
        <label>Will You Be Attending?</label>
        <div class="controls">
          <label class="checkbox inline">
            <input type="checkbox"> Yes
          </label>
          <label class="checkbox inline">
            <input type="checkbox"> No
          </label>
        </div>
      </div>
    </div>
    <a href="#" id="add-new-rsvp">+ RSVP for another person in your party</a>
  </div>
  <div class="modal-footer">
    <button class="cpt-button style-primary">RSVP</button>
  </div>
</div>
